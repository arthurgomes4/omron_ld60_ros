<?xml version="1.0"?>

<launch>

  <arg name="no_static_map" default="true"/>
  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>
  
  <rosparam param="use_sim_time">true</rosparam>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>
    <rosparam file="$(find omron_ld60_ros)/param/move_base/planner.yaml" command="load"/>

    <rosparam file="$(find omron_ld60_ros)/param/move_base/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find omron_ld60_ros)/param/move_base/costmap_common.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find omron_ld60_ros)/param/move_base/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/>

    <rosparam file="$(find omron_ld60_ros)/param/move_base/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>
    
    <rosparam file="$(find omron_ld60_ros)/param/move_base/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <param name="global_costmap/width" value="100.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="100.0" if="$(arg no_static_map)"/>
  </node>

</launch>